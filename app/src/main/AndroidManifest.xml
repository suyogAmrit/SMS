<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suyogcomputech.sms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ShoppingCartItem"
            android:screenOrientation="portrait" />


        <activity
            android:name=".ProductListActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProductDetailsActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".EventListActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".EventDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SailorDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventConformActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SpecialistActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DoctorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DoctorDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BookDoctorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InsuranceActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".InsuranceTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InsuranceRequestActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SpecialistLawerActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".LawyerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LawyerDetailsActivity"/>
        <activity android:name=".BookLawyerActivity"/>

    </application>

</manifest>