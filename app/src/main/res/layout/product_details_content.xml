<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue T shirt"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/product_frame"
                    android:layout_marginTop="5dp">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/black"/>
                    <TextView
                        android:id="@+id/product_cutting_price"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp" />
                </FrameLayout>


                <TextView
                    android:id="@+id/productDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info" />
    </LinearLayout>

    <TextView
        android:id="@+id/product_offer_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />
    <RatingBar
        android:theme="@style/RatingBar"
        android:rating="3"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingProduct"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:id="@+id/sizeWithText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:id="@+id/product_size_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/mideuim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/extraLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/doubleExtraLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/tripleExtraLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_bg"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"/>
        </RadioGroup>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:theme="@style/MyButton"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:drawableLeft="@drawable/cart_icon"
        android:id="@+id/addToCartButton"/>

</LinearLayout>
</LinearLayout>